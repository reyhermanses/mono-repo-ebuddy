{
    "compilerOptions": {
      "target": "ES6",
      "module": "CommonJS",
      "outDir": "dist",
      "rootDir": ".",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "types": [
        "node"
      ],
      "typeRoots": [
        "../../node_modules/@types"
      ]
    },
    "include": [
      "core/**/*.ts",
      "config/**/*.ts",
      "globals/**/*.d.ts"
    ],
    "exclude": [
      "node_modules",
      "dist"
    ]
  }